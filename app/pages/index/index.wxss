/**index.wxss**/

.main {
  height: 10000rpx;
}

.bg-color-0 {
  background-color: blueviolet;
}

.block-image {
  display: flex;
  margin: auto;
}

.main-image {
  width: 500rpx;
  height: 500rpx;
  margin: auto;
}

.time-display {
  display: flex;
  margin: auto;
}

.time-display text {
  font-size: 50rpx;
  color: ghostwhite;
  margin: auto;
}

text {
  font-size: 40rpx;
  color: ghostwhite;
  margin: auto;
}

.user-list {
  margin-left: 5%;
  margin-top: 5%;
}

.finish-list {
  display: flex;
  flex-direction: row;
}

.avatar-sm {
  width: 90rpx;
  height: 90rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  border-radius: 10%;
  z-index: 1;
}
.avatar-sm image {
  position: absolute;
  width: 90rpx;
  height: 90rpx;
}
.mark {
  position: relative;
  z-index: 2;
}

.button-image {
  width: 300rpx;
  height: 300rpx;
  margin: auto;
}

.br-image {
  display: flex;
  margin: auto;
}

.br-image image {
  width: 95%;
  height: 50rpx;
  margin: auto;
  margin-bottom: 20rpx;
}

